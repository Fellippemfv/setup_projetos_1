    <main class="content">

        <%- include("partials/navbarAdmin") %>

        <div class="admin__content">

            <div class="article__section__header">
                <h1 class="title__header">Criar novo artigo</h1>
            </div>

            <form action="/admin/dashboard/articles/new" method="POST">
                <fieldset>

                    <legend>Tela inicial</legend>
                    <div class="article__item">
                        <label for=""> Titulo do experimento</label>
                        <input type="text" name="title" placeholder="Ex: Fogo na mão" required>     
                    </div>
                   
                    <div class="article__item">
                        <label for="">Foto que representa o experimento</label>
                        <input type="file" name="exp_image_home">     
                    </div>
                   
                    <div class="article__item">
                        <label for="">Descrição resumida do experimento</label>
                        <textarea name="description_home" id="" cols="30" rows="10" placeholder="Experiência envolvendo fogo na mão usando maiseza" required></textarea>    
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Corpo do experimento</legend>
                    <div class="article__item">
                        <label for="">Materiais</label>
                        <input type="text" name="materials" placeholder="Ex: 1 Bacia com água, 1 bom ar, 1 caixa de maizena" required>
                    </div>

                    <div class="article__item">
                        <label for="">Passo a passo</label>
                        <textarea name="steps_by_step" id="" cols="30" rows="10" placeholder="Primeiro é preciso encher o balde com água com bom ar, depois misturar muito bem..." required></textarea>
                    </div>

                    <div class="article__item">
                        <label for="">Link do video do experimento</label>
                        <input type="text" name="exp_video">
                    </div>

                    <div class="article__item">
                        <label for="">Imagem do ínicio do experimento</label>
                        <input type="file" name="exp_image_initial">
                    </div>

                    <div class="article__item">
                        <label for="">Imagem do final do experimento</label>
                        <input type="file" name="exp_image_done">
                    </div>
                    
                </fieldset>

