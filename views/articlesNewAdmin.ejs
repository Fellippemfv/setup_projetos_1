                <fieldset>
                    <legend>Orientações para professores</legend>
                    <div class="article__item">
                        <label for="">Dicas importantes</label>
                        <textarea name="tips_important" id="" cols="30" rows="10" placeholder="Um ponto negativo deste experimento é que se deve ter cuidado na hora de colocar fogo na mão" required></textarea>
                    </div>

                    <div class="article__item">
                        <label for="">Dicas para o EaD</label>
                        <textarea name="tips_ead" id="" cols="30" rows="10" placeholder="No EaD, é preciso muita atenção a orientação para o aluno não cometer erros..." required></textarea>
